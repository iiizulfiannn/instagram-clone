<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_image_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_avatar_big" />

    <TextView
        android:id="@+id/tv_username"
        style="@style/TextView.Bold.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        app:layout_constraintStart_toEndOf="@id/iv_image_profile"
        app:layout_constraintTop_toTopOf="@id/iv_image_profile"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Arneo Paris" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/TextView.Regular.10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/iv_image_profile"
        app:layout_constraintStart_toEndOf="@id/iv_image_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        tools:text="Arneo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_three_dots"
        app:layout_constraintBottom_toBottomOf="@id/iv_image_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_image_profile"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_content_1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_image_profile"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_content"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/iv_like"
        app:layout_constraintTop_toBottomOf="@id/iv_content"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@id/iv_comment"
        app:layout_constraintTop_toBottomOf="@id/iv_content"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_bookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_content"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_liked_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_like">

        <TextView
            style="@style/TextView.Regular.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_liked_by"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_liked_list"
            style="@style/TextView.Bold.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            tools:text="Gabdu et dâ€™autres personnes" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_user_post"
        style="@style/TextView.Regular.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ll_liked_list"
        tools:text="ArthurHazan Lorem Ipsum #Proud" />

    <TextView
        android:id="@+id/tv_user_comments"
        style="@style/TextView.Regular.10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="6dp"
        android:alpha="0.4"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/home_see_all_comments"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_user_post" />

</androidx.constraintlayout.widget.ConstraintLayout>