<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_username"
            style="@style/TextView.ExtraBold.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:gravity="center"
            app:drawableEndCompat="@drawable/ic_verified"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="codefive" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_gradient_circle_stroke"
            android:padding="2dp"
            tools:src="@drawable/ic_avatar_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_user_post_total"
            style="@style/TextView.ExtraBold.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            app:layout_constraintBottom_toTopOf="@id/tv_user_post_label"
            app:layout_constraintEnd_toStartOf="@id/tv_user_follower_total"
            app:layout_constraintStart_toEndOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="@id/iv_profile"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="6956" />

        <TextView
            android:id="@+id/tv_user_post_label"
            style="@style/TextView.Bold.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/profile_post_label"
            android:textColor="@color/text_primary"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"
            app:layout_constraintEnd_toEndOf="@id/tv_user_post_total"
            app:layout_constraintStart_toStartOf="@id/tv_user_post_total"
            app:layout_constraintTop_toBottomOf="@id/tv_user_post_total" />

        <TextView
            android:id="@+id/tv_user_follower_total"
            style="@style/TextView.ExtraBold.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            app:layout_constraintBottom_toTopOf="@id/tv_user_following_label"
            app:layout_constraintEnd_toStartOf="@+id/tv_user_following_total"
            app:layout_constraintStart_toEndOf="@id/tv_user_post_label"
            tools:text="27,7m" />

        <TextView
            android:id="@+id/tv_user_follower_label"
            style="@style/TextView.Bold.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/profile_follower_label"
            android:textColor="@color/text_primary"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_post_label"
            app:layout_constraintEnd_toEndOf="@id/tv_user_follower_total"
            app:layout_constraintStart_toStartOf="@id/tv_user_follower_total"
            app:layout_constraintTop_toTopOf="@id/tv_user_post_label" />

        <TextView
            android:id="@+id/tv_user_following_total"
            style="@style/TextView.ExtraBold.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            app:layout_constraintBottom_toTopOf="@id/tv_user_following_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_user_follower_total"
            tools:text="219" />

        <TextView
            android:id="@+id/tv_user_following_label"
            style="@style/TextView.Bold.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/profile_following_label"
            android:textColor="@color/text_primary"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_post_label"
            app:layout_constraintEnd_toEndOf="@id/tv_user_following_total"
            app:layout_constraintStart_toStartOf="@id/tv_user_following_total"
            app:layout_constraintTop_toTopOf="@id/tv_user_post_label" />

        <TextView
            android:id="@+id/tv_profile_username"
            style="@style/TextView.ExtraBold.12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            tools:text="codefive" />

        <TextView
            android:id="@+id/tv_profile_description"
            style="@style/TextView.Bold.12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_username"
            tools:text="Designer" />

        <TextView
            android:id="@+id/tv_profile_biography"
            style="@style/TextView.Regular.12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_description"
            tools:text="Lorem Ipsum ðŸ’»" />

        <TextView
            android:id="@+id/tv_profile_link"
            style="@style/TextView.Regular.12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_hyperlink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_biography"
            tools:text="codefive.pt" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_profile_follow"
            style="@style/Primary.Button.Blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:minHeight="28dp"
            android:text="@string/profile_follow_label"
            app:layout_constraintEnd_toStartOf="@id/btn_profile_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_link" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_profile_message"
            style="@style/Primary.Button.Grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:minHeight="28dp"
            android:text="@string/profile_message_label"
            app:layout_constraintEnd_toStartOf="@id/btn_profile_email"
            app:layout_constraintStart_toEndOf="@id/btn_profile_follow"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_link" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_profile_email"
            style="@style/Primary.Button.Grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:minHeight="28dp"
            android:text="@string/profile_email_label"
            app:layout_constraintEnd_toStartOf="@id/iv_profile_add_person"
            app:layout_constraintStart_toEndOf="@id/btn_profile_message"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_link" />

        <ImageView
            android:id="@+id/iv_profile_add_person"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_grey_rounded_6"
            android:padding="8dp"
            android:src="@drawable/ic_add_person"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_link"
            tools:ignore="ContentDescription" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_profile_highlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_profile_follow"
            tools:itemCount="10"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/cell_profile_highlight"
            tools:orientation="horizontal" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/rv_profile_highlight"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            app:tabIconTint="@color/tab_icon_color_state_list"
            app:tabIndicatorColor="@color/text_primary"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="1dp"
            app:tabMode="fixed" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_profile_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tab_profile"
            app:spanCount="3"
            tools:itemCount="9"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/cell_profile_collection" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>